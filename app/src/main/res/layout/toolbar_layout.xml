<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_ScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/my_inventory"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title" />

    <ImageButton
        android:id="@+id/button_Back"
        android:layout_width="@dimen/button_back_width"
        android:layout_height="@dimen/button_back_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_mar_med"
        android:layout_marginRight="@dimen/layout_mar_med"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/backbutton" />
</RelativeLayout>
